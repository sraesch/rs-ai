{
  "type": "json_schema",
  "json_schema": {
    "name": "weather",
    "strict": true,
    "schema": {
      "type": "object",
      "properties": {
        "location": {
          "type": "string",
          "description": "City or location name"
        },
        "temperature": {
          "type": "number",
          "description": "Temperature in Celsius"
        },
        "conditions": {
          "type": "string",
          "description": "Weather conditions description"
        },
        "humidity": {
          "type": "number",
          "description": "Optionally, the humidity level in percentage"
        }
      },
      "required": ["location", "temperature", "conditions"],
      "additionalProperties": false
    }
  }
}
